    "name": "behaviour_firstpersonscript",
    "label": "First Person Controller",
    "properties": {
      "camerasensitivity": { "type": "number", "label": "Camera Sensitivity", "default": 0.002, "step": 0.0001 },
      "playerwalkspeed": { "type": "number", "label": "Walk Speed", "default": 0.1, "step": 0.01 },
